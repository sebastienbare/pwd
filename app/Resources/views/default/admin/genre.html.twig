{% extends 'default/admin/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h2 class="title-1 m-b-25">Genre</h2>
            <a href={{ path('addgenre') }}><button type="button" class="btn btn-primary m-b-25 text-right">Add</button></a>
            <div class="table-responsive table--no-card m-b-40">
                <table class="table table-borderless table-striped table-earning">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Genre</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if genre == [] %}
                        <p>Vous n'avez aucun acteur !</p>
                    {% else %}
                        {% for genres in genre %}
                            <tr>
                                <td>{{ genres.id }}</td>
                                <td>{{ genres.genre }}</td>
                                <td><a href={{ path('genreUpdate',{ 'id': genres.id }) }}><button type="button" class="btn btn-success">Update</button></a></td>
                                <td><a href={{ path('genreDelete',{ 'id': genres.id }) }}><button type="button" class="btn btn-danger">Delete</button></a></td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}