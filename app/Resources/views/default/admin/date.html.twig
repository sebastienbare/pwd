{% extends 'default/admin/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h2 class="title-1 m-b-25">Date</h2>
            <a href="/admin/adddate"><button type="button" class="btn btn-primary m-b-25 text-right">Add</button></a>
            <div class="table-responsive table--no-card m-b-40">
                <table class="table table-borderless table-striped table-earning">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Ann√©e</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if date == [] %}
                        <p>Vous n'avez aucun acteur !</p>
                    {% else %}
                        {% for dates in date %}
                            <tr>
                                <td>{{ dates.id }}</td>
                                <td>{{ dates.date }}</td>
                                <td><a href={{ path('dateUpdate',{ 'id': dates.id }) }}><button type="button" class="btn btn-success">Update</button></a></td>
                                <td><a href={{ path('dateDelete',{ 'id': dates.id }) }}><button type="button" class="btn btn-danger">Delete</button></a></td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}