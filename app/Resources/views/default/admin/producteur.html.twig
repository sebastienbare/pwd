{% extends 'default/admin/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h2 class="title-1 m-b-25">Producteur</h2>
            <a href={{ path('addproducteur') }}><button type="button" class="btn btn-primary m-b-25 text-right">Add</button></a>
            <div class="table-responsive table--no-card m-b-40">
                <table class="table table-borderless table-striped table-earning">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Pr√©nom</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if producteur == [] %}
                        <p>Vous n'avez aucun producteur !</p>
                    {% else %}
                        {% for producteurs in producteur %}
                            <tr>
                                <td>{{ producteurs.id }}</td>
                                <td>{{ producteurs.nom }}</td>
                                <td>{{ producteurs.prenom }}</td>
                                <td><a href={{ path('producteurUpdate',{ 'id': producteurs.id }) }}><button type="button" class="btn btn-success">Update</button></a></td>
                                <td><a href={{ path('producteurDelete',{ 'id': producteurs.id }) }}><button type="button" class="btn btn-danger">Delete</button></a></td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}