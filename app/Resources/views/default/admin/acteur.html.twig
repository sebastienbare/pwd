{% extends 'default/admin/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h2 class="title-1 m-b-25">Acteur</h2>
            <a href={{ path('addacteur') }}><button type="button" class="btn btn-primary m-b-25 text-right">Add</button></a>
            <div class="table-responsive table--no-card m-b-40">
                <table class="table table-borderless table-striped table-earning">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Pr√©nom</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if acteur == [] %}
                        <p>Vous n'avez aucun acteur !</p>
                    {% else %}
                        {% for acteurs in acteur %}
                            <tr>
                                <td>{{ acteurs.id }}</td>
                                <td>{{ acteurs.nom }}</td>
                                <td>{{ acteurs.prenom }}</td>
                                <td><a href={{ path('acteurUpdate',{ 'id': acteurs.id }) }}><button type="button" class="btn btn-success">Update</button></a></td>
                                <td><a href={{ path('acteurDelete',{ 'id': acteurs.id }) }}><button type="button" class="btn btn-danger">Delete</button></a></td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}